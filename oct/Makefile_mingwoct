ifndef MATLABROOT
  $(warning MATLABROOT variable is udefined. Using default (probably wrong) MATLABROOT="c:\Octave\Octave3.6.4_gcc4.6.2")
  MATLABROOT=c:\Octave\Octave3.6.4_gcc4.6.2
endif

ifndef EXT
  EXT=oct
endif

include ../src/ostools.mk

OCTSCC   = \
    comp_chirpzt \
    comp_gga \
    comp_filterbank_td \
	comp_ifilterbank_td \
	comp_atrousfilterbank_td \
	comp_iatrousfilterbank_td \
        comp_col2diag\
	comp_sepdgt \
	comp_dct \
	comp_dst \
	comp_sepdgtreal \
	comp_dgtreal_ola \
	comp_dwilt  \
	comp_idwilt  \
	comp_dwiltiii  \
	comp_idwiltiii  \
	comp_gabdual_long  \
	comp_gabtight_long  \
	comp_fftreal  \
	comp_gabreassign  \
	comp_heapint  \
	comp_isepdgt  \
	comp_isepdgtreal  \
	comp_ifftreal  \
	comp_iwfac \
	comp_nonsepdgt_multi  \
	comp_nonsepdgt_shear  \
